{
  "name": "learning-platform",
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": ["./src/front-apps/*", "./src/front-libs/*", "./src/server-apps/*", "./src/server-libs/*", "./src/shared-libs/*"],
  "scripts": {
    "migration:generate:auth-users": "bunx drizzle-kit  generate:pg --config=./src/server-apps/auth-query-service/database/config.ts",
    "migration:generate:auth-events": "bunx drizzle-kit generate:pg --config=./src/server-apps/auth-command-service/database/config.ts",
    "mirgation:generate:all": "bun run migration:generate:auth-users && bun run migration:generate:auth-events",
    "deps-install": "bun i ",
    "dev:env-up": "bun run deps-install && bun run mirgation:generate:all && docker compose -f ./docker-compose.dev.yml up -d",
    "dev:auth-query": " bun --watch ./src/server-apps/auth-query-service/",
    "dev:auth-command": "bun --watch ./src/server-apps/auth-command-service/",
    "dev:auth-events": "bun ./src/server-apps/auth-events-service/",
    "dev:gateway": "bun --watch ./src/server-apps/gateway",
    "dev:platform-app": "cd ./src/front-apps/platform-app && bun run dev ",
    "dev:blog-app": "cd ./src/front-apps/blog-app && bun run dev ",
    "dev:host-front-app": "cd ./src/front-apps/host-front-app && bun run dev ",
    "orm:studio": "bunx drizzle-kit studio",
    "dev:env-down": "docker compose -f ./docker-compose.dev.yml down",
    "own:shared-folders": "bun run own:data && bun run own:logs && bun run own:configs",
    "own:data": "sudo chown -R ${USER}:${USER} data",
    "own:logs": "sudo chown -R ${USER}:${USER} logs",
    "own:configs": "sudo chown -R ${USER}:${USER} configs"
  },
  "private": true,
  "module": "index.ts",
  "type": "module",
  "dependencies": {
    "drizzle-kit": "^0.20.7",
    "drizzle-orm": "^0.29.1",
    "elysia": "^0.8.3",
    "flowbite": "^2.2.1",
    "flowbite-react": "^0.7.2",
    "googleapis": "^129.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "pino": "^8.17.1",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "pino-pretty": "^10.3.0"
  }
}
