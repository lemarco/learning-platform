{
  "name": "learning-platform",
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": ["apps/*", "libs/*"],
  "scripts": {
    "migration:generate:auth-users": "bunx drizzle-kit  generate:pg --config=./apps/auth-query-service/database/config.ts",
    "migration:generate:auth-events": "bunx drizzle-kit generate:pg --config=./apps/auth-command-service/database/config.ts",
    "mirgation:generate:all": "bun run migration:generate:auth-users && bun run migration:generate:auth-events",
    "deps-install": "bun i ",
    "dev:env-up": "bun run deps-install && bun run mirgation:generate:all && docker compose -f ./docker-compose.dev.yml up -d",
    "dev:auth-query": " bun --watch ./apps/auth-query-service/",
    "dev:auth-command": "bun --watch ./apps/auth-command-service/",
    "dev:auth-events": "bun ./apps/auth-events-service/",
    "dev:gateway": "bun --watch ./apps/gateway",
    "dev:platform-app": "cd ./apps/platform-app && bun run dev ",
    "dev:blog-app": "cd ./apps/blog-app && bun --bun run dev ",
    "orm:studio": "bunx drizzle-kit studio",
    "dev:env-down": "docker compose -f ./docker-compose.dev.yml down",
    "own:shared-folders": "bun run own:data && bun run own:logs && bun run own:configs",
    "own:data": "sudo chown -R ${USER}:${USER} data",
    "own:logs": "sudo chown -R ${USER}:${USER} logs",
    "own:configs": "sudo chown -R ${USER}:${USER} configs"
  },
  "private": true,
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.7",
    "pino-pretty": "^10.3.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "elysia": "^0.7.31",
    "flowbite-react": "^0.7.2",
    "googleapis": "^129.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "pino": "^8.17.1",
    "postgres": "^3.4.3",
    "qwik-image": "^0.0.8",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  }
}
