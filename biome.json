{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "ignore": ["node_modules", "temp", "data", "logs", "dist", "vite.config.ts", ".nx", "migrations", "configs"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140
  },
  "linter": {
    "ignore": ["node_modules", "temp", "data", "logs", "dist", "*.spec.ts", "*.spec.tsx", ".nx", "migrations", "configs"],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
