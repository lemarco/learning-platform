{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", "dist", "lib", "build", "out", "data", "logs", "temp", "configs", "migrations", "*.spec.ts", "*.spec.tsx"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "ignore": ["node_modules", "dist", "lib", "build", "out", "data", "logs", "temp", "configs", "migrations", "*.spec.ts", "*.spec.tsx"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140
  },
  "linter": {
    "ignore": ["node_modules", "dist", "lib", "build", "out", "data", "logs", "temp", "configs", "migrations", "*.spec.ts", "*.spec.tsx"],
    "enabled": true,
    "rules": {

      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "recommended": true
    }
  }
}
